<div class="fondo-products">

<p id="notice"><%= notice %></p>

<h1>Productos</h1>

    <div class="row top-pro">
      <div class="col-md-2 text-white font-weight-bold">Nombre</div>
      <div class="col-md-8 text-white font-weight-bold">Precio</div>
    </div>

    <% @products.each do |product| %>
    <div class="row single-product">
        <div class="col-md-2"><%= product.name %></div>
        <div class="col-md-2"><%= product.price %></div>
        <div class="col-md-2"><%= link_to 'Editar', edit_product_path(product), class:'btn btn-success' %></div>
        <div class="col-md-2"><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger'  %></div>
    </div>
    <% end %>


<%= render 'form', product: @new_product %>
</div>
