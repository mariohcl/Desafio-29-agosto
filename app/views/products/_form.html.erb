<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="cont-form">

    <div class="field row form-cols">
      <div class="col-md-1"><%= form.label :nombre %></div>
      <div class="col-md-3"><%= form.text_field :name, id: :product_name, class: 'form-control' %></div>
    </div>

    <div class="field row form-cols">
      <div class="col-md-1"><%= form.label :precio %></div>
      <div class="col-md-3"><%= form.text_field :price, id: :product_price, class: 'form-control' %></div>
    </div>

    <div class="actions row">
      <div class="col-md-2"><%= form.submit class: 'btn btn-default' %></div>
    </div>

  </div>
<% end %>
